    Layout = "/Views/Shared/_TemplatesLayout.cshtml";
}
<div class="container-fluid container-innersearch4">
    <div class="innersearch">
        <h1 class="morepadding">אמנים</h1>
    </div>
</div>
<div class="container-fluid container-innercontent2">
    <div class="innercontent">
        <ol class="breadcrumb">
			<li><a href="/">עמוד הבית</a></li>
			<li class="active">אמנים</li>        
		</ol>
            
        <div class="text-center subtitle">פסקול מאפשרת לך למכור <span>רישיון שימוש</span> ליצירות המוזיקליות שלך עבור שימושים מסחריים.</div>
        <h3 class="bigblueheading">איך זה עובד?</h3>
                
        <div class="row steps">
            <div class="col-lg-3 col-md-3 col-sm-3">
                <img alt="" src="~/Content/images/work1.png">
